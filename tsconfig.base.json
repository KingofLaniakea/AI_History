{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@ai-history/core-types": ["packages/core-types/src/index.ts"],
      "@ai-history/parsers": ["packages/parsers/src/index.ts"],
      "@ai-history/ui": ["packages/ui/src/index.ts"]
    }
  }
}
